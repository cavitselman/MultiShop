@model GetByIdContactDto

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}

<style>
    .chat-box {
        max-width: 700px;
        margin: 30px auto;
        background-color: #f5f5f5;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }

    .message-header {
        text-align: center;
        margin-bottom: 20px;
    }

    .message-header h3 {
        margin-bottom: 5px;
    }

    .message-meta {
        font-size: 14px;
        color: #777;
    }

    .message-bubble {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 15px;
        border: 1px solid #ddd;
        line-height: 1.6;
        font-size: 16px;
        position: relative;
    }

    .back-btn {
        margin-bottom: 20px;
        display: inline-block;
    }
</style>

<section class="content container-fluid">
    <div class="chat-box">
        <a href="/Admin/Contact/Index" class="btn btn-secondary back-btn">
            <i class="fa fa-arrow-left"></i> Geri
        </a>

        <div class="message-header">
            <h3>Konu: @Model.Subject</h3><br />
            <div class="message-meta">
                <strong>@Model.NameSurname</strong> - <em>@Model.Email</em><br /><br />
                <span>@Model.SendDate.ToString("dd.MM.yyyy HH:mm")</span>
            </div>
        </div>

        <div class="message-bubble">
            İçerik:
            @Model.Message
        </div>
    </div>
</section>