@model RequestRefundViewModel

@{
    ViewData["Title"] = "RequestRefund";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
}

<div class="container my-5">
    <h2 class="text-center mb-4">İade Talebi Oluştur</h2>
    <form action="/User/MyOrder/RequestRefund" method="post">
        <input type="hidden" name="OrderingId" value="@Model.OrderingId" />

        @if (Model.OrderDetails != null && Model.OrderDetails.Count > 0)
        {
            @for (int i = 0; i < Model.CargoDetails.Count; i++)
            {
                var cargo = Model.CargoDetails[i];
                var orderDetail = Model.OrderDetails.FirstOrDefault(od => od.OrderDetailId == cargo.OrderDetailId);

                // Burada ürün adı ve miktar ataması
                var productName = orderDetail?.ProductName ?? "Ürün adı bulunamadı";
                var productAmount = orderDetail?.ProductAmount ?? 1;

                <div class="card mb-4 p-3 shadow-sm">
                    <input type="hidden" name="CargoDetails[@i].OrderDetailId" value="@cargo.OrderDetailId" />
                    <input type="hidden" name="CargoDetails[@i].OrderingId" value="@cargo.OrderingId" />

                    <div class="mb-2">
                        <strong>Ürün:</strong> @productName
                    </div>

                    <div class="mb-3">
                        <label class="form-label">İade Edilecek Adet</label>
                        <select name="CargoDetails[@i].ReturnAmount" class="form-select" style="max-width: 200px;">
                            <option value="">Adet Seçiniz</option>
                            @for (int j = 1; j <= productAmount; j++)
                            {
                                <option value="@j">@j</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
    <label class="form-label">İade Nedeni</label>
    <select name="CargoDetails[@i].Reason" class="form-select">
        @foreach (var reason in Model.ReasonList)
        {
            @:<option value="@reason.Value"@(cargo.Reason == reason.Value ? " selected" : "")>@reason.Text</option>
        }
    </select>
</div>
                    <div class="mb-3">
                        <label class="form-label">Açıklama</label>
                        <textarea name="CargoDetails[@i].Description" class="form-control">@cargo.Description</textarea>
                    </div>
                </div>
            }
        }
        else
        {
            <p>İade talebi oluşturmak için ürün bulunamadı.</p>
        }

        <button type="submit" class="btn btn-primary">İade Talebi Gönder</button>
    </form>
</div>
