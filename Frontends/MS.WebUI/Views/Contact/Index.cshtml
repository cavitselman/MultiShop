@model CreateContactDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

@if (ViewBag.SuccessMessage != null)
{
    <br />
    <div id="successMessage" class="alert alert-success text-center" style="width: 100%; padding: 15px; margin: 0 auto;" role="alert">
        @ViewBag.SuccessMessage
    </div>
}

<div class="container-fluid">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Bize Yazın</span></h2>
    <div class="row px-xl-5">
        <div class="col-lg-7 mb-5">
            <div class="contact-form bg-light p-30">
                <div id="success"></div>
                <form method="post">
                    <div class="control-group">
                        <input type="text" class="form-control" id="name" placeholder="Adınız Soyadınız"
                               required="required" data-validation-required-message="Lütfen boş geçmeyin!" asp-for="NameSurname" />
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <input type="email" class="form-control" id="email" placeholder="Email Adresiniz"
                               required="required" data-validation-required-message="Lütfen boş geçmeyin!" asp-for="Email" />
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <input type="text" class="form-control" id="subject" placeholder="Mesaj Konusu"
                               required="required" data-validation-required-message="Lütfen boş geçmeyin!" asp-for="Subject" />
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <textarea class="form-control" rows="8" id="message" placeholder="Mesajınız"
                                  required="required"
                                  data-validation-required-message="Lütfen boş geçmeyin!" asp-for="Message"></textarea>
                        <p class="help-block text-danger"></p>
                    </div>
                    <div>
                        <button class="btn btn-primary py-2 px-4" type="submit" id="sendMessageButton">
                            Mesajı Gönder
                        </button>
                    </div>
                </form>
            </div>
        </div>

        @await Component.InvokeAsync("_ContactDetailComponentPartial")
        
    </div>
</div>

<style>
    #successMessage {
        bottom:10px;
        margin: 20px auto; /* Yukarıdan ve aşağıdan boşluk */
        text-align: center; /* Metni ortala */
        width: fit-content; /* İçeriğe göre genişlik ayarla */
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var message = document.getElementById("successMessage");
        if (message) {
            setTimeout(function () {
                message.style.display = 'none'; // Mesajı gizle
            }, 5000); // 5000 ms = 5 saniye
        }
    });
</script>