    }

    th {
        background-color: #f2f2f2;
        padding: 10px;
    }

    td {
        padding: 8px;
    }

    .total-price {
        font-size: 18px;
        font-weight: bold;
        margin-top: 10px;
    }

    .no-order {
        color: red;
        font-weight: bold;
        margin-top: 20px;
    }

    .btn-container {
        margin-top: 30px;
    }

    .continue-btn {
