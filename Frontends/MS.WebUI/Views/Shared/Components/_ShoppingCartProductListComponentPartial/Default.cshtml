@model List<BasketItemDto>

@if (Model != null && Model.Any())
{
    <div class="col-lg-8 table-responsive mb-5">
        <table class="table table-light table-borderless table-hover text-center mb-0">
            <thead class="thead-dark">
                <tr>
                    <th>Görsel</th>
                    <th>Ürün</th>
                    <th>Fiyat</th>
                    <th>Miktar</th>
                    <th>Toplam</th>
                    <th>Kaldır</th>
                </tr>
            </thead>
            <tbody class="align-middle">
                @foreach (var item in Model)
                {
                    <tr data-product-id="@item.ProductId">
                        <td class="align-middle"><img src="@item.ProductImageUrl" alt="" style="width:70px;height:50px"></td>
                        <td class="align-middle">@item.ProductName</td>
                        <td class="align-middle">@item.Price₺</td>
                        <td class="align-middle">
                            <div class="input-group quantity mx-auto" style="width: 100px;">
                                <button type="button" class="btn btn-sm btn-primary btn-minus" data-action="decrease" data-product-id="@item.ProductId">
                                    <i class="fa fa-minus"></i>
                                </button>
                                <input type="text" class="form-control form-control-sm bg-secondary border-0 text-center quantity-input" value="@item.Quantity" readonly />
                                <button type="button" class="btn btn-sm btn-primary btn-plus" data-action="increase" data-product-id="@item.ProductId">
                                    <i class="fa fa-plus"></i>
                                </button>
                            </div>
                        </td>
                        <td class="align-middle total-price">@((item.Quantity * item.Price).ToString("N2"))₺</td>
                        <td class="align-middle"><a href="/ShoppingCart/RemoveBasketItem/@item.ProductId" class="btn btn-sm btn-danger"><i class="fa fa-times"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div>
        <h3 class="text-center text-danger">Sepetinizde Ürün Yok</h3>
    </div>
}
