@model List<BasketItemDto>

@{
    decimal total = 0;
    int count = 0;
    string productId = "";
    string quantity = "";
    string quantityPlus = "";
    string quantityMinus = "";
}

@if (Model.Count > 0)
{
    <div class="col-lg-8 table-responsive mb-5">
        <table class="table table-light table-borderless table-hover text-center mb-0">
            <thead class="thead-dark">
                <tr>
                    <th>Görsel</th>
                    <th>Ürün</th>
                    <th>Fiyat</th>
                    <th>Miktar</th>
                    <th>Toplam</th>
                    <th>Kaldır</th>
                </tr>
            </thead>
            <tbody class="align-middle">
                @foreach (var item in Model)
                {
                    count++;
                    productId = "productId" + count;
                    quantity = "quantity" + count;
                    quantityPlus = "quantityPlus" + count;
                    quantityMinus = "quantityMinus" + count;
                    total = item.Quantity * item.Price;
                    <tr>
                        <td class="align-middle"><img src="@item.ProductImageUrl" alt="" style="width:70px;height:50px"></td>
                        <td class="align-middle">@item.ProductName</td>
                        <td class="align-middle product-price">@item.Price₺</td>
                        <td class="align-middle">
                            <div class="input-group quantity mx-auto" style="width: 100px;">
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-primary btn-minus">
                                        <i class="fa fa-minus"></i>
                                    </button>
                                </div>
                                <input type="text" class="form-control form-control-sm bg-secondary border-0 text-center quantity-input" value="@item.Quantity">
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-primary btn-plus">
                                        <i class="fa fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </td>
                        <td class="align-middle total-price">@item.Price₺</td>
                        <td class="align-middle"><a href="/ShoppingCart/RemoveBasketItem/@item.ProductId" class="btn btn-sm btn-danger"><i class="fa fa-times"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="~/js/refreshbasketplus.js"></script>
    <script src="~/js/refreshbasketminus.js"></script>
}
else
{
    <div>
        <h3 class="text-center text-danger">Sepetinizde Ürün Yok</h3>
    </div>
}

