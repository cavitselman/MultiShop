@model UpdateOrderAddressDto

@if (Model.AddressId != 0)
{
<div class="col-lg-8">
    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş Teslimat ve Fatura Adresiniz</span></h5>
    <div class="bg-light p-30 mb-5">
        <form method="post">
            <div class="row">
                <div class="col-md-6 form-group">
                    <label>Adınız</label>
                    <input class="form-control" type="text" asp-for="Name" placeholder="Adınız">
                </div>
                <div class="col-md-6 form-group">
                    <label>Soyadınız</label>
                    <input class="form-control" type="text" asp-for="Surname" placeholder="Soyadınız">
                </div>
                <div class="col-md-6 form-group">
                    <label>E-mail Adresiniz</label>
                    <input class="form-control" type="text" asp-for="Email" placeholder="mail@email.com">
                </div>
                <div class="col-md-6 form-group">
                    <label>Telefon Numaranız</label>
                    <input class="form-control" type="text" asp-for="Phone" placeholder="+90 123 456 78 90">
                </div>
                <div class="col-md-6 form-group">
                    <label>Adres - 1</label>
                    <input class="form-control" type="text" asp-for="Detail1" placeholder="123 Mahallesi">
                </div>
                <div class="col-md-6 form-group">
                    <label>Adres - 2</label>
                    <input class="form-control" type="text" asp-for=Detail2 placeholder="123 Sokak">
                </div>
                <div class="col-md-6 form-group">
                    <label>Ülke</label>
                    <input class="form-control" type="text" asp-for=Country placeholder="Ülke">
                </div>
                <div class="col-md-6 form-group">
                    <label>Şehir</label>
                    <input class="form-control" type="text" asp-for="City" placeholder="Şehir">
                </div>
                <div class="col-md-6 form-group">
                    <label>İlçe</label>
                    <input class="form-control" type="text" asp-for="District" placeholder="İlçe">
                </div>
                <div class="col-md-6 form-group">
                    <label>Posta Kodu</label>
                    <input class="form-control" type="text" asp-for="ZipCode" placeholder="12345">
                </div>
                    <div class="col-md-12 form-group">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" asp-for="Isdefault" id="defaultAddress">
                            <label class="custom-control-label" for="defaultAddress">Bu Adrese Gönder</label>
                        </div>
                    </div>
                    <div class="col-md-12 form-group">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" asp-for="IsInvoice" id="billingAdress">
                            <label class="custom-control-label" for="billingAdress">Fatura Adresim</label>
                        </div>
                    </div>
                    <div class="col-md-12 form-group">
                        <button type="submit" name="district" class="btn btn-outline-success rounded">Adres ve Teslimat Bilgilerini Güncelle</button>
                    </div>
            </div>
        </form>
    </div>
        @await Component.InvokeAsync("_AppUserAddressesComponentPartial")
</div>
}
else
{
    <div class="col-lg-8">
        <h5 class="section-title position-relative text-uppercase text-danger mb-3"><span class="bg-secondary pr-3">Kayıtlı Adresiniz Yok veya Varsayılan Adresiniz Seçili Değil. Lütfen Adres Ekleyin veya Adresiniz Varsa Seçim Yapın.</span></h5>
        @await Component.InvokeAsync("_AppUserAddressesComponentPartial")
    </div>
}